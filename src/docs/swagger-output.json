{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API XP - Teste Técnico",
    "description": "Api que simula operações básicas de conta corrente (saque e depósito) e de corretora de investimentos (compra e venda de ações)."
  },
  "host": "localhost:3000",
  
  "basePath": "/",
  "tags": [
    {
      "name": "Conta",
      "description": "Endpoints para gerenciamento de conta."
    },
    {
      "name": "Investimentos",
      "description": "Endpoints para consultar, comprar e vender ações."
    }
  ],
  "schemes": [
    "http"
    
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "token de autenticação"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/conta/login": {
      "post": {
        "tags": [
          "Conta"
        ],
        "description": "Endpoint para logar um usuário em específico.",
        "parameters": [
          {
            "name":"body",
            "in": "body",
            "description": "Não é necessário passar id de cliente. O sistema retornará um token.",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "required":true,
                  "type":"string",
                  "example": "daenerysTargaryen@gmail.com"
                },
                "password": {
                  "required":true,
                  "type":"string",
                  "example": "123456"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/conta/deposito": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Deposito na conta corrente",
        "description": "Endpoint para depositar numa conta. Não é necessário estar logado.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Existe duas contas pré-cadastradas(1 e 2)",
            "schema": {
              "type": "object",
              "properties": {
                "CodCliente": {
                  "required":true,
                  "type":"integer",
                  "example": 1
                },
                "Valor": {  
                  
                  "required":true,
                  "type":"decimal",
                  "example": 100
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/conta/saque": {
      "post": {
        "tags":["Conta"],
        "description": "Endpoint para sacar valor",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "CodCliente": {
                  "type":"integer",
                  "example": "1"
                },
                "Valor": {
                  "type":"bool",
                  "example": "100.00"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/conta/{id}": {
      "get": {
        "tags":["Conta"],
        "summary": "Consulta de saldo conta corrente",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "example": 1,
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/conta/encerrar/": {
      "delete": {
        "tags":["Conta"],
        "summary": "Desativa a conta corrente",
        "description": "",
        
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "CodCliente": {
                  "type":"integer",
                  "example": "1"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          }
        }
      }
    },
    "/investimentos/": {
      "get": {
        "tags": [
          "Investimentos"
        ],
        "description": "Endpoint para consultar todos os ativos disponíveis na corretora",
        "summary": "Lista as ações existentes na corretora",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/investimentos/search": {
      "get": {
        "tags": [
          "Investimentos"
        ],
        "description": "Endpoint para consultar os ativos por nome. Os ativos disponíveis são os do índice IBrX100",
        "summary": "Pesquisa pelo código do ativo",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "type": "string",
            "example": "PETR4"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/investimentos/cod/{id}": {
      "get": {
        "tags": [
          "Investimentos"
        ],
          "description": "Endpoint para consultar um ativo pelo codAtivo ( de nº 1 ao 88).",
        "summary": "Pesquisa pelo cod_ativo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "37"

          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/investimentos/carteira": {
      "get": {
        "tags": [
          "Investimentos"
        ],
        "description": "Endpoint para retornar os ativo da carteira do usuário",
        "summary": "Retorna os ativos do cliente",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/investimentos/comprar": {
      "post": {
        "tags": [
          "Investimentos"
        ],
        "description": "Endpoint para comprar um ativo pelo codAtivo",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "codCliente": {
                  "type":"integer",
                  "example": 1
                },
                "codAtivo": {
                  "type":"integer",
                  "example": 23
                },
                "qtdeAtivo": {
                  "type":"integer",
                  "example": 100
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/investimentos/vender": {
      "post": {
        "tags": [
          "Investimentos"
        ],
        "description": "Endpoint para vender um ativo pelo codAtivo",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "codCliente": {
                  "type":"integer",
                  "example": 1
                },
                "codAtivo": {
                  "type":"integer",
                  "example": 23
                },
                "qtdeAtivo": {
                  "type":"integer",
                  "example": 100
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    }
  }
}